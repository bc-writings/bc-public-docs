\setkomafont{section}{\center\Large\bfseries}
\setkomafont{subsection}{\center\large\bfseries}
\let\raggedpart\centering





\newcommand{\specialSubSection}[1]{
    \subsection*{#1}
    
    \addcontentsline{toc}{subsection}{#1}
}%

\renewcommand{\thefootnote}{\roman{footnote}}
\makeatletter
    \def\@makefnmark{ %
        \hbox{\@textsuperscript{\normalfont(\@thefnmark)}} %
}
\makeatother


\newcommand{\oneBook}[1]{%
    \focus{#1}%
}%
\newcommand{\oneAuthor}[2]{%
    #1 \textsc{#2}%
}%

\newcommand{\focus}[1]{%
    \emph{\og #1 \fg}%
}%
\newcommand*{\greekText}[1]{%
    \foreignlanguage{greek}{#1}%
}%

\newcommand{\linkStyle}[1]{%
    \textcolor{blue}{#1}%
}%

\newcommand{\mylink}[2][]{%
    \hyperref[#2]{\linkStyle{%
        \ifthenelse{\equal{#1}{}}{#2}{#1}%
    }}%
}%

